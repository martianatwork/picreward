<%= simple_form_for(@campaign) do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :product %>
  <%= f.input :goal %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.input :description %>
  <%= f.input :instructions %>
  <%= f.input :pics_to_upload %>
  <%= f.input :pics_to_post %>
  <%= f.input :budget %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

  <%= f.button :submit %>
<% end %>
