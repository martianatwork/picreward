<%= simple_form_for(@campaign) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reward_type, collection: [ "Local Swap", "Paid Job"], as: :radio_buttons, item_wrapper_tag: nil, item_wrapper_class: nil, :checked => "Local Swap" %>
  <%= f.input :target_location, label: 'Target Location (if local)', placeholder: '3 Rue de la Paix, 75002 Paris, France' %>
  <%= f.input :title %>
  <%= f.input :product %>
  <%= f.input :goal %>
  <%= f.input :budget %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.input :description %>
  <%= f.input :instructions %>
  <%= f.input :pics_to_upload %>
  <%= f.input :pics_to_post %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <div class="text-center">
  <%= f.button :submit, class: "brand-button"%>
  </div>
<% end %>
