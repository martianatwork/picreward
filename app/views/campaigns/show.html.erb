<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">

      <div class="campaign-actions form-container">
        <h3><%= @campaign.title %></h3>
        <div>
          <% if policy(@campaign).update? %>
          <%= link_to 'Edit', edit_campaign_path(@campaign), class:"btn action-button" %>
          <% end %>
        </div>
      </div>

      <div class="campaign-box form-container">

        <% if @campaign.reward_type == "Local Swap" %>
        <div id="small-map"></div>
        <% end %>

        <div class="campaign-details">
        <p><strong>Product</strong> <%= @campaign.product %></p>
        <p><strong>Description</strong> <%= @campaign.description %></p>
        <p><strong>Instructions</strong> <%= @campaign.instructions %></p>
        <p><strong>Goal</strong> <%= @campaign.goal %></p>
        <p><strong>Budget</strong> <%= @campaign.budget %></p>
        <p><strong>Start</strong> <%= @campaign.start_time %></p>
        <p><strong>End</strong> <%= @campaign.end_time %></p>
        <p><strong>Number of pics to upload</strong> <%= @campaign.pics_to_upload %></p>
        <p><strong>Number of pics to post</strong> <%= @campaign.pics_to_post %></p>
        </div>

        <div class="campaign-box-photo">
          <%= cl_image_tag @campaign.photo, class:"img-responsive" %>
        </div>

      </div>

    </div>
  </div>
  <div class="row">
    <% if user_signed_in? && @campaign.business %>
    <% if @campaign.business.user == current_user %>

  <%# if @campaign.business %>
    <%# if user_signed_in? && @campaign.business.user == current_user %>

    <div class="col-sm-8 col-sm-offset-2 form-container">
      <h1 class="text-center">Applications</h1>
      <% (@campaign.applications).each do |application| %>
      <ul>
        <li class="campaign-show-applications">
          <h4>
            <%= link_to (Emoji.find_by_alias("clipboard").raw) + " " +application.influencer.username, campaign_application_path(@campaign, application) %>
          </h4>
        </li>
      </ul>
      <% end %>
    </div>
    <% end %>
    <% end %>

    <% if user_signed_in? && current_user.influencer && @campaign.reward_type == "Paid Job"%>

    <div class="col-sm-8 col-sm-offset-2 form-container">
      <h3>Apply</h3>
      <%= render 'applications/application_form' %>
    </div>

    <% end %>

  </div>
</div>


<% content_for(:after_js) do %>
<%= javascript_tag do %>
$(document).on('ready', function() {
handler = Gmaps.build('Google');
handler.buildMap({ provider: {
scrollwheel: false}, internal: { id: 'small-map' } }, function(){
marker = handler.addMarkers(<%= raw @marker.to_json %>);
handler.bounds.extendWith(marker);
handler.fitMapToBounds();});})
<% end %>
<% end %>

<%= javascript_include_tag "//maps.google.com/maps/api/js?v=3.18&client=&key=AIzaSyAWTD7XXgfWzV60HCDVLL-71xV1yoH6lBQ&libraries=geometry&language=&hl=&region=" %>
<%= javascript_include_tag "https://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" %>

