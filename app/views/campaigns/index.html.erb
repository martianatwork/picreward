<div class="tabs">
  <a class="tab active" data-target="#local_swaps_view">
    <h3>Local Swaps</h3>
  </a>
  <a class="tab" data-target="#paid_jobs_view">
    <h3>Paid Jobs</h3>
  </a>
</div>

<div id="local_swaps_view" class="tab-content">
  <div class="fluid-container">

    <div class="row nomargin">
      <div class="col-xs-12 col-md-7 leftcol">



        <div id="paid_jobs_view" class="tab-content hidden">

          <div>

            <ul>
              <% @paid_jobs.each do |campaign| %>
              <%= link_to campaign_path(campaign) do %>
              <li><%= campaign.reward_type %> - <%= campaign.title %> <%= campaign.product %></li>
              <% end %>
              <% end %>
            </ul>
          </div>
        </div>

      </div>
      <div class="col-xs-12 col-md-5 rightcol nopadding">
        <div id="map" style='width: 100%; height: 500px;'></div>


        <% content_for(:after_js) do %>
        <%= javascript_tag do %>
        $(document).on('ready', function() {
        handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function(){
        markers = handler.addMarkers(<%= raw @markers.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();});})
        <% end %>
        <% end %>

        <div>

          <ul>
            <% @local_swaps.each do |campaign| %>
            <%= link_to campaign_path(campaign) do %>
            <li><%= campaign.reward_type %> - <%= campaign.title %> <%= campaign.product %></li>
            <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

<%= javascript_include_tag "//maps.google.com/maps/api/js?v=3.18&client=&key=AIzaSyAWTD7XXgfWzV60HCDVLL-71xV1yoH6lBQ&libraries=geometry&language=&hl=&region=" %>
<%= javascript_include_tag "https://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" %>
<%= javascript_include_tag "//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js" %>
