<%= render 'shared/transparent_navbar'%>

<div class="business-home-banner" style="background-image: url('http://cdn.thedailybeast.com/content/dailybeast/articles/2015/04/11/instagrammer-of-the-week-nicolee-drake/jcr:content/image.crop.800.500.jpg/47625722.cached.jpg') ">
  <div class="business-home-banner-content">
    <p>Instagrammers can do the job for you</p>
  </div>
  <div class="arrow-link-container">
    <a href="#detail-business" class="link-details">
      <i class="fa fa-chevron-down floating margin-top-30"></i>
    </a>
  </div>
</div>

<div class="wrapper-influencer-home" id="detail-business">

  <div class="container">
    <div class="row">
      <div class="container-instagram-influencer-home">
        <div class="insta-pic-business-home col-xs-7">

        </div>
        <div class="insta-description">
          <h2 class="text-center">Private Advertising has just been boosted</h2>
          <hr class="hr-influencer-home">
          <h4>1. Create a campaign</h4>
          <h4>2. Wait influencers to apply to your campaign</h4>
          <h4>3. Validates influencer's applications you like</h4>
          <h4>4. See your product on the influencer's instagram account </h4>

          <p class="influencer-home-emojis"> PicReward
          <%= Emoji.find_by_alias("sunglasses").raw %>
          <%= Emoji.find_by_alias("rocket").raw %>
          <%= Emoji.find_by_alias("eyes").raw %>
          <%= Emoji.find_by_alias("moneybag").raw %>
          </p>
          <div class="business-home-button-container">
          <%= link_to "Create a campaign", new_campaign_path, class: "button-influencer-home brand-button" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="wrapper-type-campaign">
  <div class="business-home-benefits-content">
    <h1>Benefits</h1>
  </div>
</div>














