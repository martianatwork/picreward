<div class="container">
  <div class="row">
    <div class="col-xs-12 container-instagram">
      <div class="insta-pic col-xs-7">
      </div>
      <div class="col-xs-4 insta-description">
        <h1><%=@business.name%></h1>
        <h4>Contact</h4>
        <p><%= @business.contact_name%> </p>
        <h4>Address</h4>
        <p><%= @business.address %></p>

      </div>
    </div>
  </div>
  <div class="btn text-center">
  <%= link_to "  Profile  ", edit_business_path(@business), class: "insta-business-edit"%>
  <%= link_to "  Delete  ", business_path(@business), method: :delete, class: "insta-business-delete"%>
  </div>
</div>

