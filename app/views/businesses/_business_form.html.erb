<%= simple_form_for(@business) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category %>
  <%= f.input :tva %>
  <%= f.input :contact_name %>
  <%= f.input :photo, label: 'Logo' %>
  <%= f.input :photo_cache, as: :hidden %>

  <div class="text-center">
  <%= f.button :submit, class: "brand-button" %>
  </div>
<% end %>
