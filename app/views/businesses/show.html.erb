<div class="container">
  <div class="row">
    <div class="col-xs-12 container-instagram">
      <div class="insta-pic col-xs-4">
      </div>
      <div class="col-xs-7 insta-description">
        <h1><%=@business.name%></h1>
        <h3>Contact</h3>
        <p><%= @business.contact_name%> </p>
        <h3>Address</h3>
        <p><%= @business.address %></p>
        <h3>Campaigns</h3>
        <% (@business.campaigns).each do |campaign| %>
        <h4><%= link_to campaign.title, campaign_path(campaign) %></h4>
        <% end %>
        <h5>Instagrammers</h5>
        <% (@business.campaigns).each do |campaign| %>
          <%(campaign.applications).each do |application| %>
            <%= application.influencer.username%>
            <%= image_tag(application.influencer.photo, class:"avatar-large") %>
          <% end %>
        <% end %>
        <img src="http://media1.popsugar-assets.com/files/2014/02/18/064/n/28443503/8432f3e88dc98fb8_5a037b0697b311e39d9c1284ed10107c_8.jpg.xxxlarge/i/girlsSource-Instagram-user-fitchicksintraining.jpg" alt="" class="src" style="border-radius: 50%; width: 150px; padding: 20px">
      </div>
    </div>
  </div>
</div>

